<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="210.0" prefWidth="186.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="org.example.windowcalculartor.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <Label fx:id="welcomeText" prefHeight="68.0" prefWidth="164.0">
    <font>
      <Font size="14.0" />
    </font>
  </Label>

  <Label fx:id="expressionText" prefHeight="68.0" prefWidth="164.0">
    <font>
      <Font size="14.0" />
    </font>
  </Label>

  <TextField fx:id="answerTextField">
    <font>
      <Font size="14.0" />
    </font>
  </TextField>

  <Button text="Следующее Задание" onAction="#genNextExpressionButtonClick"/>
  <Button text="Проверить" onAction="#checkAnswerButtonClick"/>
</VBox>
